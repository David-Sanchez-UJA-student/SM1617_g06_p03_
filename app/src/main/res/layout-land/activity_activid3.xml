<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activid3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dimanxe.prueba1.com.example.dimanxe.practica3.Activid3">

    <TextView
        android:text="@string/org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editOrigen"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:id="@+id/OrgView"
        android:layout_alignBottom="@+id/editOrigen"
       />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:id="@+id/cabecera"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Send"
        android:id="@+id/Enviar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="34dp"
        android:layout_marginBottom="29dp" />

    <TextView
        android:text="@string/dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DestView"

        android:layout_below="@+id/OrgView"
        android:layout_alignEnd="@+id/OrgView"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:ems="10"
        android:id="@+id/editDestino"
        android:hint="@string/dest"
        android:layout_alignTop="@+id/DestView"
        android:layout_alignStart="@+id/editOrigen" />

    <TextView
        android:text="@string/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FechaView"


        android:layout_below="@+id/editDestino"
        android:layout_alignEnd="@+id/DestView"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editFecha"
        android:layout_alignBaseline="@+id/FechaView"
        android:layout_alignBottom="@+id/FechaView"
        android:layout_alignStart="@+id/editDestino" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"

        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/editOrigen"
        android:hint="@string/org"
        android:layout_below="@+id/cabecera"
        android:layout_alignStart="@+id/Enviar" />
</RelativeLayout>
